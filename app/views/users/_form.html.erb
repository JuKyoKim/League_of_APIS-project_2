<%= form_for @user do |f| %>
<br>
<%= f.label :name, "username:" %>
<br>
<%= f.text_field :name %>
<br>
<%= f.label :email, "user's email:" %>
<br>
<%= f.text_field :email %>
<br>
<%= f.label :password, "user's password:" %>
<br>
<%= f.password_field :password %>
<br>
<%= f.label :password_confirmation, "password confimration:" %>
<br>
<%= f.password_field :password_confirmation %>
<br>
<%= f.submit %>
<% end %>